<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OrbitalDocking.ViewModels"
        xmlns:components="using:OrbitalDocking.Views.Components"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="OrbitalDocking.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Orbital Docking"
        Width="1200" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Button.action">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.action:pointerover">
            <Setter Property="Opacity" Value="0.8"/>
        </Style>
    </Window.Styles>

    <Panel>
        <!-- Background gradient -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="{DynamicResource BackgroundColor}" Offset="0"/>
                    <GradientStop Color="{DynamicResource SurfaceColor}" Offset="0.5"/>
                    <GradientStop Color="{DynamicResource CardColor}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Main content -->
        <Grid Margin="60,40,60,70">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Minimal header -->
            <Grid Grid.Row="0" Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Navigation on the left -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="20">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Cursor="Hand"
                            Command="{Binding ShowSettingsViewCommand}"
                            VerticalAlignment="Center">
                        <TextBlock Text="ORBITAL" 
                                   FontSize="14" 
                                   FontWeight="Light"
                                   Foreground="{Binding SettingsTextColor}"
                                   LetterSpacing="4"
                                   Opacity="0.8"
                                   VerticalAlignment="Center"/>
                    </Button>
                    <Border Width="1" Height="16" Background="{DynamicResource BorderColor}" VerticalAlignment="Center"/>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Cursor="Hand"
                            Command="{Binding ShowContainersViewCommand}"
                            VerticalAlignment="Center">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Style>
                        </Button.Styles>
                        <TextBlock FontSize="14" Foreground="{Binding ContainersTextColor}" VerticalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} CONTAINERS">
                                    <Binding Path="Containers.Count"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Button>
                    <Border Width="1" Height="16" Background="{DynamicResource BorderColor}" VerticalAlignment="Center"/>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Cursor="Hand"
                            Command="{Binding ShowImagesViewCommand}"
                            VerticalAlignment="Center">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Style>
                        </Button.Styles>
                        <TextBlock FontSize="14" Foreground="{Binding ImagesTextColor}" VerticalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} IMAGES">
                                    <Binding Path="Images.Count"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Button>
                    <Border Width="1" Height="16" Background="{DynamicResource BorderColor}" VerticalAlignment="Center"/>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Cursor="Hand"
                            Command="{Binding ShowVolumesViewCommand}"
                            VerticalAlignment="Center">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Style>
                        </Button.Styles>
                        <TextBlock FontSize="14" Foreground="{Binding VolumesTextColor}" VerticalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} VOLUMES">
                                    <Binding Path="Volumes.Count"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Button>
                    <Border Width="1" Height="16" Background="{DynamicResource BorderColor}" VerticalAlignment="Center"/>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Cursor="Hand"
                            Command="{Binding ShowNetworksViewCommand}"
                            VerticalAlignment="Center">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Style>
                        </Button.Styles>
                        <TextBlock FontSize="14" Foreground="{Binding NetworksTextColor}" VerticalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} NETWORKS">
                                    <Binding Path="Networks.Count"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Button>
                </StackPanel>
                
                <!-- Empty middle column for spacing -->
                <Panel Grid.Column="1"/>
                
                <!-- Search box and refresh on the right -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <Button Command="{Binding RefreshContainersCommand}"
                            Background="{DynamicResource SurfaceColor}"
                            BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="1"
                            Padding="8,6"
                            CornerRadius="4"
                            VerticalAlignment="Center"
                            ToolTip.Tip="Refresh Containers">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="{DynamicResource CardColor}"/>
                            </Style>
                        </Button.Styles>
                        <TextBlock Text="â†»" FontSize="16" Foreground="{DynamicResource PrimaryColor}"/>
                    </Button>
                    <TextBox Text="{Binding SearchText}"
                             Background="{DynamicResource SurfaceColor}"
                             BorderBrush="{DynamicResource BorderColor}"
                             BorderThickness="1"
                             Foreground="{DynamicResource TextPrimaryColor}"
                             FontSize="13"
                             Padding="10,6"
                             CornerRadius="4"
                             Watermark="Search..."
                             Width="200"
                             VerticalAlignment="Center">
                    <TextBox.Styles>
                        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                        </Style>
                        <Style Selector="TextBox">
                            <Setter Property="CaretBrush" Value="{DynamicResource PrimaryColor}"/>
                        </Style>
                    </TextBox.Styles>
                    </TextBox>
                </StackPanel>
            </Grid>

            <!-- Container list with stacks -->
            <ScrollViewer Grid.Row="1" IsVisible="{Binding ShowContainers}">
                <StackPanel Spacing="16">
                    <!-- Stacks -->
                    <ItemsControl ItemsSource="{Binding Stacks}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="16"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <components:StackGroup />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Standalone Containers -->
                    <ItemsControl ItemsSource="{Binding StandaloneContainers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="16"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <components:ContainerCard />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Images list -->
            <ScrollViewer Grid.Row="1" IsVisible="{Binding ShowImages}">
                <ItemsControl ItemsSource="{Binding FilteredImages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="16"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <components:ImageCard />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Volumes list -->
            <ScrollViewer Grid.Row="1" IsVisible="{Binding ShowVolumes}">
                <ItemsControl ItemsSource="{Binding FilteredVolumes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="16"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <components:VolumeCard />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Networks list -->
            <ScrollViewer Grid.Row="1" IsVisible="{Binding ShowNetworks}">
                <ItemsControl ItemsSource="{Binding FilteredNetworks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="16"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <components:NetworkCard />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Settings view -->
            <components:SettingsView Grid.Row="1" IsVisible="{Binding ShowSettings}"/>
        </Grid>

        <!-- Status bar -->
        <Border VerticalAlignment="Bottom"
                Background="{DynamicResource SurfaceColor}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,1,0,0"
                Height="30">
            <Grid Margin="60,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Docker status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Ellipse Width="6" Height="6" Fill="{Binding DockerStatusColor}" VerticalAlignment="Center"/>
                        <TextBlock Text="DOCKER" 
                                   FontSize="10"
                                   Foreground="{DynamicResource TextTertiaryColor}"
                                   FontWeight="Medium"
                                   LetterSpacing="1"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding DockerVersion}"
                               FontSize="11"
                               Foreground="{DynamicResource TextSecondaryColor}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Center status message -->
                <TextBlock Grid.Column="1"
                           Text="{Binding StatusMessage}"
                           FontSize="11"
                           Foreground="{DynamicResource TextTertiaryColor}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- System stats -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                    <TextBlock FontSize="11" Foreground="{DynamicResource TextSecondaryColor}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} RUNNING">
                                <Binding Path="RunningContainersCount"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock FontSize="11" Foreground="{DynamicResource TextTertiaryColor}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} STOPPED">
                                <Binding Path="StoppedContainersCount"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Panel>
</Window>
