<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OrbitalDocking.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="120"
             x:Class="OrbitalDocking.Views.Components.ImageCard"
             x:DataType="vm:ImageViewModel">
    
    <Border Background="{DynamicResource SurfaceColor}"
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="1"
            CornerRadius="6"
            Padding="20"
            Margin="0,4">
        <Grid ColumnDefinitions="Auto,*,Auto">
            <StackPanel Grid.Column="0" Spacing="8" MinWidth="300">
                <TextBlock Text="{Binding ShortRepository}" 
                           FontSize="14" 
                           Foreground="{DynamicResource TextPrimaryColor}"
                           ToolTip.Tip="{Binding Repository}"/>
                <TextBlock Text="{Binding Tag}" 
                           FontSize="12" 
                           Foreground="{DynamicResource TextSecondaryColor}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="8">
                <TextBlock Text="{Binding SizeFormatted}" 
                           FontSize="12" 
                           Foreground="{DynamicResource TextSecondaryColor}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding CreatedRelative}" 
                           FontSize="11" 
                           Foreground="{DynamicResource TextTertiaryColor}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        Spacing="8"
                        VerticalAlignment="Center">
                <Button Content="RUN"
                        FontSize="11"
                        Padding="10,6"
                        Background="{DynamicResource PrimaryColor}"
                        Foreground="{DynamicResource BackgroundColor}"
                        BorderThickness="0"
                        CornerRadius="4"
                        Name="RunButton"/>
                <Button Content="REMOVE"
                        FontSize="11"
                        Padding="10,6"
                        Background="#FF6B6B"
                        Foreground="{DynamicResource TextPrimaryColor}"
                        BorderThickness="0"
                        CornerRadius="4"
                        Name="RemoveButton"/>
                <Button Content="PULL"
                        FontSize="11"
                        Padding="10,6"
                        Background="#95E1D3"
                        Foreground="{DynamicResource BackgroundColor}"
                        BorderThickness="0"
                        CornerRadius="4"
                        Name="PullButton"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>