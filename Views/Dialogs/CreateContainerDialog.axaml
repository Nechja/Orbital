<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:OrbitalDocking.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="300"
        x:Class="OrbitalDocking.Views.Dialogs.CreateContainerDialog"
        x:DataType="vm:CreateContainerDialogViewModel"
        Title=""
        Width="450"
        Height="340"
        WindowStartupLocation="CenterOwner"
        Background="#0A0A1F"
        CanResize="False">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main content with padding -->
        <Grid Grid.Row="0" Margin="32,32,32,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Image name at top -->
            <TextBlock Grid.Row="0" 
                       Text="{Binding ImageFullName}" 
                       FontSize="11" 
                       Foreground="#4ECDC4"
                       Opacity="0.8"
                       Margin="0,0,0,24"/>
            
            <!-- Simple content area -->
            <StackPanel Grid.Row="1" Spacing="20">
            <!-- Name input - minimal -->
            <TextBox Text="{Binding ContainerName}"
                     Background="Transparent"
                     BorderBrush="#2A2A4F"
                     BorderThickness="0,0,0,1"
                     Foreground="#FFFFFF"
                     FontSize="14"
                     Padding="0,0,0,8"
                     Watermark="Container name"/>
            
            <!-- Quick config buttons -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="+ Port"
                        FontSize="11"
                        Padding="12,6"
                        Background="Transparent"
                        Foreground="#4ECDC4"
                        BorderBrush="#2A2A4F"
                        BorderThickness="1"
                        CornerRadius="4"
                        Command="{Binding AddPortCommand}"/>
                        
                <Button Content="+ Environment"
                        FontSize="11"
                        Padding="12,6"
                        Background="Transparent"
                        Foreground="#4ECDC4"
                        BorderBrush="#2A2A4F"
                        BorderThickness="1"
                        CornerRadius="4"
                        Command="{Binding AddEnvironmentVariableCommand}"/>
            </StackPanel>
            
            <!-- Dynamic config display - super minimal -->
            <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="8">
                    <!-- Ports -->
                    <ItemsControl ItemsSource="{Binding PortMappings}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#0F0F2A" 
                                        CornerRadius="4" 
                                        Padding="10,6">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <TextBlock Grid.Column="0" 
                                                   Text="Port" 
                                                   FontSize="10"
                                                   Foreground="#666688"
                                                   Margin="0,0,10,0"/>
                                        <StackPanel Grid.Column="1" 
                                                    Orientation="Horizontal" 
                                                    Spacing="4">
                                            <TextBox Text="{Binding HostPort}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="#FFFFFF"
                                                     FontSize="11"
                                                     Width="50"
                                                     Watermark="8080"/>
                                            <TextBlock Text="→" 
                                                       Foreground="#666688"
                                                       VerticalAlignment="Center"/>
                                            <TextBox Text="{Binding ContainerPort}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="#FFFFFF"
                                                     FontSize="11"
                                                     Width="50"
                                                     Watermark="80"/>
                                        </StackPanel>
                                        <Button Grid.Column="2"
                                                Content="×"
                                                FontSize="12"
                                                Width="16"
                                                Height="16"
                                                Background="Transparent"
                                                Foreground="#666688"
                                                BorderThickness="0"
                                                Padding="0"
                                                VerticalAlignment="Center"
                                                Command="{Binding $parent[Window].DataContext.RemovePortCommand}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Environment variables -->
                    <ItemsControl ItemsSource="{Binding EnvironmentVariables}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#0F0F2A" 
                                        CornerRadius="4" 
                                        Padding="10,6">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <TextBlock Grid.Column="0" 
                                                   Text="Env" 
                                                   FontSize="10"
                                                   Foreground="#666688"
                                                   Margin="0,0,10,0"/>
                                        <StackPanel Grid.Column="1" 
                                                    Orientation="Horizontal" 
                                                    Spacing="4">
                                            <TextBox Text="{Binding Key}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="#FFFFFF"
                                                     FontSize="11"
                                                     Width="80"
                                                     Watermark="KEY"/>
                                            <TextBlock Text="=" 
                                                       Foreground="#666688"
                                                       VerticalAlignment="Center"/>
                                            <TextBox Text="{Binding Value}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="#FFFFFF"
                                                     FontSize="11"
                                                     Width="100"
                                                     Watermark="value"/>
                                        </StackPanel>
                                        <Button Grid.Column="2"
                                                Content="×"
                                                FontSize="12"
                                                Width="16"
                                                Height="16"
                                                Background="Transparent"
                                                Foreground="#666688"
                                                BorderThickness="0"
                                                Padding="0"
                                                VerticalAlignment="Center"
                                                Command="{Binding $parent[Window].DataContext.RemoveEnvironmentVariableCommand}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
            </StackPanel>
        </Grid>
        
        <!-- Action button zone with background -->
        <Border Grid.Row="1" 
                Background="#08081A"
                BorderBrush="#1A1A3F"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Spacing="12"
                        Margin="32,16">
                <Button Content="Cancel"
                        FontSize="12"
                        Padding="20,8"
                        Background="Transparent"
                        Foreground="#666688"
                        BorderThickness="0"
                        Command="{Binding CancelCommand}"/>
                <Button Content="Run"
                        FontSize="12"
                        Padding="32,8"
                        Background="#4ECDC4"
                        Foreground="#000000"
                        BorderThickness="0"
                        CornerRadius="4"
                        FontWeight="SemiBold"
                        Command="{Binding CreateAndStartCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>